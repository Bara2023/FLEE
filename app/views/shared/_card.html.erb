
<div id="travelCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% Travel.all.each_with_index do |travel, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <div class="d-flex justify-content-center">
        <%= link_to travel_path(travel, search_url: request.original_url) do %>
          <% if travel.photo.attached? %>
            <div class="banner half-width" style="width: 69vw; background-image: linear-gradient(rgba(0,0,0,0.2),rgba(18,51,47,0.3)), linear-gradient(rgba(18,51,47,0.3),rgba(18,51,47,0.3)), url('<%= cl_image_path travel.photo.key, crop: :fill %>')">
          <% else %>
            <div class="banner half-width" style="width: 69vw; background-image: linear-gradient(rgba(0,0,0,0.2),rgba(18,51,47,0.3)), linear-gradient(rgba(18,51,47,0.3),rgba(18,51,47,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
          <% end %>
            <div class="user-profile d-flex">
                <% if travel.user.photo.attached? %>
                  <%= cl_image_tag travel.user.photo.key, class: "card-trip-user avatar-bordered me-2", alt: "dropdown menu" %>
                <% else %>
                  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered me-2" />
                <% end %>
             <div class="entete">
                <h6><%= travel.user.name %></h6>
                <div class="soustitre">propose</div>
              </div>
            </div>

            <div class="card-infos">
             <div class="destinationcard mb-2">
                <%= travel.destination %>
              </div>

               <div class="card-details d-flex mb-3">
                  <div class="goldtag"> Du <%= travel.start_date.strftime("%d/%m") %> au <%= travel.end_date.strftime("%d/%m") %> </div>
                  <div class="d-flex">
                    <div class="goldtag"><%= travel.budget_max %> â‚¬ </div>
                    <div class="goldtag"><%= travel.mood %> </div>
                  </div>
                </div>
            </div>
          </div>
        <% end %>
      </div>
     </div>
    <% end %>
  </div>
  <!-- Add Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#travelCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#travelCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
