<%= render "shared/navbar" %>

<div class="container">

  <div class="profile d-flex align-items-center">
      <% if @current_user.photo.attached? %>
        <%= cl_image_tag @current_user.photo.key, class: "img-show rounded-circle"%>
      <% end %>
      <h1><strong><%= @current_user.name %></strong></h1>
  </div>

<div class="dashboard-items">
    <div class="recherches d-flex align-items-center p-3">
            <h1>Mes recherches</h1>
            <div class="link ms-2">
                <%= link_to "<i class='fas fa-chevron-right'></i>".html_safe, "/dashboard/searches", class: "cream"%>
            </div>
    </div>

    <div class="candidatures d-flex align-items-center p-3">
        <h1>Mes candidatures</h1>
            <div class="link ms-2">
                <%= link_to "<i class='fas fa-chevron-right'></i>".html_safe, "/dashboard/candidatures", class: "cream"  %>
            </div>
    </div>


    <div class="voyages d-flex align-items-center p-3">
        <h1>Mes voyages</h1>
            <div class="link ms-2">
                <%= link_to "<i class='fas fa-chevron-right'></i>".html_safe, "/dashboard/travels", class: "cream"%>
            </div>

    </div>
    </div>


</div>

<%= render "shared/navbar_dashboard" %>
