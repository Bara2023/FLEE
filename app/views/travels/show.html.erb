<div class="container-show-user" >
  <div class="btn-retour">
    <%= link_to new_search_path do %>
      <i class="fa-solid fa-arrow-left fa-xl p-3" style="position: absolute; top: 10; left: 0; color: #fde8d0;"></i>
    <% end %>
</div>

  <h1>Your wacky trip</h1>
  <% if @travel.user.photo.attached? %>
    <%= link_to user_path(@travel.user) do %>
      <%= cl_image_tag @travel.user.photo.key, class: "img-show rounded-circle" %>
    <% end %>
  <% end %>
  <h1><strong><%= link_to @travel.user.name.capitalize, user_path(@travel.user), style: "text-decoration: none; color: #f5eadd" %></strong></h1>
  <p><%= @travel.user.age %> ans </p>
  <p>propose</p>
  <h1 class="destination"><%= @travel.destination %></h1>
</div>

<div class="show-user-description px-3">
  <div class="justify-content-around row">
    <button type="button" class="btn btn-secondary rounded-5 col-5 ms-2">Contacter</button>
    <button type="button" class="btn btn-secondary rounded-5 btn-candidate col-5 me-2">Candidater</button>
  </div>
  <br/>

  <div class="card-details d-flex ">
    <p><%= @travel.airport_start %></p>
    <p><%= @travel.start_date %></p>
    <p><%= @travel.end_date %></p>
    <p><%= @travel.budget_max %> €</p>
    <p><%= @travel.mood %></p>
    <p><%= @travel.age %> ans</p>
  </div>
  <h1>Le voyage proposé</h1>
  <p><%= @travel.description %></p>
</div>
