
<div class="container d-flex justify-content-center pb-4">
<%= link_to travel_path(travel, search_url: request.original_url) do %>
      <% if travel.photo.attached? %>
        <div id="favcard" class="banner half-width" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(18,51,47,0.3)), linear-gradient(rgba(18,51,47,0.3),rgba(18,51,47,0.3)), url('<%= cl_image_path travel.photo.key, crop: :fill %>')">
      <% else %>
        <div id="favcard" class="banner half-width" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(18,51,47,0.3)), linear-gradient(rgba(18,51,47,0.3),rgba(18,51,47,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
      <% end %>
        <div class="user-profile d-flex">
          <% if travel.user.photo.attached? %>
            <%= cl_image_tag travel.user.photo.key, class: "card-trip-user avatar-bordered me-2", alt: "dropdown menu" %>
          <% else %>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered me-2" />
          <% end %>
          <div class="entete">
          <h6><%= travel.user.name %></h6>
          </div>
        </div>

        <div class="card-infos">
          <div class="destinationcard mb-2">
            <%= travel.destination %>
          </div>

          <div class="card-details d-flex mb-3">
            <div class="goldtag"> Du <%= travel.start_date.strftime("%d/%m") %> au <%= travel.end_date.strftime("%d/%m") %> </div>
            <div class="d-flex">
              <div class="goldtag"><%= travel.budget_max %> â‚¬ </div>
              <div class="goldtag"><%= travel.mood %> </div>
            </div>
          </div>
        </div>
  <% end %>

  <% if LikedTravel.find_by(travel: travel) %>
  <i id="favbutton" class="fa-solid fa-heart" data-controller="like-travels" data-action="click->like-travels#liked" data-like-travels-id-value="<%= travel.id%>" data-like-travels-search-value="<%= params[:search_id]%>"></i>
  <% else %>
  <i id="favbutton" class="fa-regular fa-heart" data-controller="like-travels" data-action="click->like-travels#liked" data-like-travels-id-value="<%= travel.id%>" data-like-travels-search-value="<%= params[:search_id]%>"></i>
  <% end %>
  </div>
</div>
