<div class="container pb-5">
  <h1 class="title-searches">Où voulez-vous aller ?</h1>
  <%= simple_form_for @search do |f| %>
    <%= f.input :airport_start, placeholder: 'Ville de départ', label:false, input_html: { class: "form-input"} %>
    <%= f.input :destination, placeholder: 'Destination', label:false, input_html: { class: "form-input"} %>

    <div class="form-group">
      <div class="start-date">
        <%= f.input :start_date, html5: true, input_html: { value: params.dig(:search, :start_date) || Date.today}, placeholder: 'Date de départ', label:'Date de départ' %>
      </div>
      <div class="end-date">
        <%= f.input :end_date, html5: true, input_html: { value: params.dig(:search, :end_date)  || Date.tomorrow + 2.month + 10.days }, placeholder: "Date d'arrivée", label: "Date d'arrivée" %>
      </div>

    </div>

    <%= f.input :budget_max, placeholder: 'Ton budget max', label:false, input_html: { class: "form-input"} %>
    <%# <%= f.input :mood, collection: Travel::MOODS, label:false, prompt: 'Choisissez votre mood'%>
    <%= f.input :mood, collection: Travel::MOODS, label:"Choisis ton mood", as: :radio_buttons, input_html: { class: "tag-selector form-input" },
                  item_wrapper_class: 'tag-item', include_hidden: false, multiple: false %>
    <%= f.submit "C'est parti !", class: "btn-search" %>
  <% end %>
</div>
<%= render "shared/navbar_search" %>
