
<div class="container">

  <h1>Where do you wanna go?</h1>
  <%= simple_form_for @search, data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :airport_start, placeholder: 'Aéroport de départ', label:false %>
    <%= f.input :destination, placeholder: 'Destination', label:false %>

    <div class="form-group">
      <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: 'startDateInput' } }, placeholder: 'Date de départ', label:false %>
      <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: 'endDateInput' } }, placeholder: "Date d'arrivée", label:false %>

    </div>

    <%= f.input :budget_max, placeholder: 'Ton budget max', label:false %>
    <%# <%= f.input :mood, collection: Travel::MOODS, label:false, prompt: 'Choisissez votre mood'%>
    <%= f.input :mood, collection: Travel::MOODS, label:"Choisissez votre mood", as: :radio_buttons, input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item', include_hidden: false, multiple: false %>
    <%= f.input :age, placeholder: 'Ton âge', label:false %>
    <%= f.submit "Trouver des voyages", class: "btn-search" %>
  <% end %>
</div>
